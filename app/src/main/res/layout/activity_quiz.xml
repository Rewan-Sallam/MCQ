<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <TextView
        android:id="@+id/current_score_txtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Score : 0 "
        android:textColor="@color/colorPrimaryDark"
        android:freezesText="true"
        />

    <TextView
        android:id="@+id/question_count_txtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Question: 1/x "
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@+id/current_score_txtView"
        android:freezesText="true"
        />

    <TextView
        android:id="@+id/text_view_difficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Difficulty: "
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@+id/question_count_txtView"
        android:freezesText="true"
        />
    <TextView
        android:id="@+id/countdown_txtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textColor="@color/colorPrimaryDark"
        android:text=" 00:30 "
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />
    <TextView
        android:id="@+id/question_txtView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text=" aaaaaaaaaaaaaaaaaaaaaaaa "
        android:layout_above="@+id/radio_group"
        android:textAlignment="center"
        android:layout_marginBottom="16dp"
        android:textColor="@color/colorPrimaryDark"
        android:freezesText="true"/>
   <RadioGroup
       android:id="@+id/radio_group"
       android:layout_centerVertical="true"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       >
<RadioButton
    android:id="@+id/radio_btn_1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Option 1"
    android:freezesText="true"/>

       <RadioButton
           android:id="@+id/radio_btn_2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Option 2"
           android:freezesText="true"/>
       <RadioButton
           android:id="@+id/radio_btn_3"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Option 3"
           android:freezesText="true"/>
   </RadioGroup>
    <Button
        android:id="@+id/confirm_ans_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:layout_below="@+id/radio_group"
        android:layout_marginTop="16dp"
        android:freezesText="true"
        />

</RelativeLayout>